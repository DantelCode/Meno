<link rel="stylesheet" href="styles/shared-styles.css">

<section id="meals" data-page="meal">
  <div class="calendar-container card">
    <div class="calendar-header">
      <h2>Meals Calendar</h2>
      <div class="month-nav">
        <button id="prevMonth" title="Previous Month">‹</button>
        <span id="monthYear"></span>
        <button id="nextMonth" title="Next Month">›</button>
      </div>
    </div>

    <div class="calendar">
      <div class="calendar-days-header">
        <span>Sun</span><span>Mon</span><span>Tue</span><span>Wed</span><span>Thu</span><span>Fri</span><span>Sat</span>
      </div>
      <div id="calendarDays" class="calendar-days"></div>
    </div>

    <div class="indicators">
      <small class="nav-btn"><i class="dot dot--event"></i> Event</small>
      <small class="nav-btn"><i class="dot dot--meal"></i> Meal</small>
      <small class="nav-btn"><i class="dot dot--shopping"></i> Shopping</small>
    </div>
  </div>

  <div class="item-container card">
    <div class="top">
      <span id="selectedDate">Select a date</span>
      <button id="addEventBtn" class="nav-btn">+ Add Meal</button>
    </div>

    <ul id="eventList" class="items"></ul>

    <div id="eventForm" class="action-tab hidden">
      <span class="form-title"></span>
      <div class="inputs">
        <input type="text" id="eventTitle" placeholder="Meal name" class="card" />

        <select id="period">
          <option disabled>--Period--</option>
          <option value="morning">Morning</option>
          <option value="afternoon">Afternoon</option>
          <option value="evening">Evening</option>
        </select>

        <div class="event-btns">
          <button id="cancelEvent" class="card nav-btn">Cancel</button>
          <button id="saveEvent" class="card nav-btn">Save</button>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="scripts/utils.js"></script>
<script src="scripts/shared-script.js"></script>
<script>
  window.addEventListener('load', () => {
    renderListForType('meal');
    const form = document.getElementById('eventForm');
    if (form) form.dataset.presetType = 'meal';
  });
</script>
